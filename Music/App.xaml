<?xml version="1.0" encoding="UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Music.App">

    <Application.Resources>
        <ResourceDictionary>


            <Color x:Key="PrimaryColor">#00FF00</Color>

            <Color x:Key="AccentColor">#00FF00</Color>

            <Color x:Key="CardBackground">#00FF00</Color>

            <Color x:Key="PageBackground">#00FF00</Color>

            <Color x:Key="TextColor">Black</Color>
            

          
            <Style x:Key="LightTheme" TargetType="ContentPage">
                <Setter Property="BackgroundColor" Value="White"/>
            </Style>

           
            <Style x:Key="DarkTheme" TargetType="ContentPage">
                <Setter Property="BackgroundColor" Value="{StaticResource PageBackground}" />
            </Style>

          
            <Style TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource PrimaryColor}" />
                <Setter Property="TextColor" Value="Black" />
                <Setter Property="CornerRadius" Value="8" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="Padding" Value="10,6" />
            </Style>

            
            <Style TargetType="Label">
                <Setter Property="TextColor" Value="{StaticResource TextColor}" />
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>
